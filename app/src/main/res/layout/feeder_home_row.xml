<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_FeederHomeRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_FeederHomeRow_StartTime"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:singleLine="true"
                android:text="Start Time"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/tv_FeederHomeRow_StartTimeValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_FeederHomeRow_StartTimeValue"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:hint="Start Time"
                android:singleLine="true"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_FeederHomeRow_StartTime" />

            <TextView
                android:id="@+id/tv_FeederHomeRow_EndTime"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:singleLine="true"
                android:text="End Time"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/tv_FeederHomeRow_EndTimeValue"
                app:layout_constraintStart_toEndOf="@+id/tv_FeederHomeRow_StartTime"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_FeederHomeRow_EndTimeValue"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="End Time"
                android:singleLine="true"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_FeederHomeRow_StartTimeValue"
                app:layout_constraintTop_toBottomOf="@+id/tv_FeederHomeRow_EndTime" />

            <TextView
                android:id="@+id/tv_FeederHomeRow_Cups"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:singleLine="true"
                android:text="Cups"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/tv_FeederHomeRow_CupsValue"
                app:layout_constraintStart_toEndOf="@+id/tv_FeederHomeRow_EndTime"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.521" />

            <TextView
                android:id="@+id/tv_FeederHomeRow_CupsValue"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="Cups"
                android:singleLine="true"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_FeederHomeRow_EndTimeValue"
                app:layout_constraintTop_toBottomOf="@+id/tv_FeederHomeRow_Cups" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_FeederHomeRow_Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:maxImageSize="54dp"
                app:srcCompat="@android:drawable/ic_menu_delete" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>